<Window x:Class="Planner.PanelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Planner"
        mc:Ignorable="d"
        Title="PanelWindow" Height="450" Width="800"
        Style="{StaticResource WindowStyle}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Border Grid.Column="0" Style="{StaticResource BorderStyle}" VerticalAlignment="Top" Margin="10">
            <StackPanel Style="{StaticResource StackPanelStyle}">

            </StackPanel>
        </Border>
        <Border Grid.Column="1" Style="{StaticResource BorderStyle}" VerticalAlignment="Top" Margin="10">
            <StackPanel Style="{StaticResource StackPanelStyle}">

            </StackPanel>
        </Border>
        <Border Grid.Column="3" Style="{StaticResource BorderStyle}" VerticalAlignment="Top" Margin="10">
            <StackPanel Style="{StaticResource StackPanelStyle}">

            </StackPanel>
        </Border>
    </Grid>
</Window>
