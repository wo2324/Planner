<Window x:Class="Planner.PlannerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Planner"
        mc:Ignorable="d"
        Title="PlannerWindow" Height="450" Width="800"
        Style="{StaticResource WindowStyle}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <DataGrid>

                </DataGrid>
            </ScrollViewer>
        </StackPanel>
        <StackPanel Grid.Column="1">
            <Label Style="{StaticResource Label3Style}" Content="Name"/>
            <TextBox x:Name="TaskName" Style="{StaticResource TextBoxStyle}"/>

            <StackPanel Orientation="Horizontal">
                <Label Style="{StaticResource Label3Style}" Content="Is visible"/>
            </StackPanel>
            <Label Style="{StaticResource Label3Style}" Content="Color"/>
        </StackPanel>
    </Grid>
</Window>
